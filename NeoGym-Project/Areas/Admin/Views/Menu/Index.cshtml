@model List<Trainer>

@{
    var count = 0;
}
<div class="container">
    <a class="btn btn-primary" asp-action="Create">Create</a>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">FullName</th>
                <th scope="col">Photo</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <th>@count</th>
                    <td>@item.FullName</td>
                    <td>
                        <div style="width:100px">
                            <img width="100%" src="\Upload\Manage\@item.ImgUrl" />
                        </div>
                    </td>

                    <td>
                        <a asp-action="Update" class="btn btn-secondary" asp-route-id="@item.Id">Update</a>
                        <a asp-action="Remove" class="btn btn-danger" asp-route-id="@item.Id">Remove</a>
                    </td>



                </tr>

            }

        </tbody>
    </table>
</div>